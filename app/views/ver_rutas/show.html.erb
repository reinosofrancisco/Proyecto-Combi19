<!-- This is the actual text that appears in the webpage  -->
<header class="showcase">


   <div class="container showcase-inner">
    <div class="boxForPic"></div>
    <h2> Listado de rutas asociadas</h2>
    <!-- CAMBIAR LOS LINKS A ALGUNOS QUE ANDEN POSTA -->
    <h3 class="card-title"> </h3>

    <table class="table">

      <tr>
        <th> Nombre </th>
        <th> Origen </th>
        <th> Destino </th>

      </tr>

      <% @rutas.each do |r| %>
        <tr>
          <td> <%=r.nombre%> </td>
          <td> <%=r.origen.nombre%> </td>
          <td> <%=r.destino.nombre%> </td>
        </tr>
      <% end %>

      <% if @rutas.size == 0 %>
        <tr> <td colspan="3"> No hay rutas asociadas. </td> </tr>
      <% end %>

    </table>
      <%= link_to "Volver", '/admin/ciudad', class: "btn btn-secondary" %>
  </div>
</header>

